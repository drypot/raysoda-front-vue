{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",

    "moduleResolution": "node",

    "lib": ["esnext", "dom"],

    "esModuleInterop": true,

    "strict": true,
    "sourceMap": true,

    "useDefineForClassFields": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true, // Vite 에서는 이 옵션이 true 여야한다.
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
